@model _1410831003.Models.Guestbooks.Guestbooks


@* 建立新增資料所須的表單*@
@using (Html.BeginForm("Create", "Guestbooks"))
{
    <div class="alert alert-warning" align="center"><h2><b>有什麼話想對我說～～～？</b></h2></div>
    @* 新增姓名欄位區塊*@
    <div class="input-group input-group-lg" >
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-user"></span>
        </span>
        <span class="form-control">
            @Html.TextBoxFor(model => model.Name)            
            @Html.ValidationMessageFor(model => model.Name)
        </span>
        <span class="input-group-addon">姓名</span>
    </div>
    @* 新增內容欄位區塊*@
    <div class="input-group input-group-lg">
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-comment"></span>
        </span>
        <span class="form-control">
            @Html.TextBoxFor(model => model.Content)            
            @Html.ValidationMessageFor(model => model.Content)
        </span>
        <span class="input-group-addon">留言</span>
    </div> 
    <input type="submit" value=" 新增留言" />

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")}
}
