@model _1410831003.ViewModels.thumbNViewModel
@{
    Layout = null;
}


<div class="row">
    @if (!Model.DataList.Count.Equals(0))
    {
        foreach (var item in Model.DataList)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@Url.Content("~/Assets/images/"+item.img)">
                    <div class="caption">
                        <h3>@item.head</h3>
                        <p>@item.info</p>
                        <p>
                            <a href="@Url.Action("Index","trip")" target="_self" class="btn btn-warning"
                               role="button">行程</a>
                            <a href="@item.link" target="_blank" class="btn btn-default"
                               role="button">介紹</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}